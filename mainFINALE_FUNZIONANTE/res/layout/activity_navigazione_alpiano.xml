<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigazioneAlpiano">
    <include layout="@layout/map_view"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv"
        android:background="@color/white"
        android:padding="10dp"
        android:text="Ti trovi su un piano diverso da quello in cui vuoi andare. Sarai indirizzato alla scala: una volta raggiunto il piano corretto, premi sul pulsante in basso."
        android:textColor="@color/black"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/tv"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:padding="10dp"
        android:text="Verde: La tua posizione"
        android:textColor="@color/green"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:text="Rosso: destinazione."
        android:padding="10dp"
        android:textSize="14dp"
        android:background="@color/white"
        android:textColor="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"

        android:src="@drawable/ok"
        android:id="@+id/nav"/>
</RelativeLayout>